    <!-- Project Libraries -->

    <path id = "library.mysql:mysql-connector-java:6.0.6.classpath">
        <pathelement
                location = "${path.variable.maven_repository}/mysql/mysql-connector-java/6.0.6/mysql-connector-java-6.0.6.jar"/>
    </path>

    <path id = "library.org.xerial:sqlite-jdbc:3.20.1.classpath">
        <pathelement
                location = "${path.variable.maven_repository}/org/xerial/sqlite-jdbc/3.20.1/sqlite-jdbc-3.20.1.jar"/>
    </path>
    <!-- Register Custom Compiler Taskdefs -->
    <property name = "javac2.home" value = "${idea.home}/lib"/>
    <path id = "javac2.classpath">
        <pathelement location = "${javac2.home}/javac2.jar"/>
        <pathelement location = "${javac2.home}/jdom.jar"/>
        <pathelement location = "${javac2.home}/asm-all.jar"/>
        <pathelement location = "${javac2.home}/jgoodies-forms.jar"/>
    </path>
    <target name = "register.custom.compilers">
        <taskdef name = "javac2" classname = "com.intellij.ant.Javac2" classpathref = "javac2.classpath"/>
        <taskdef name = "instrumentIdeaExtensions" classname = "com.intellij.ant.InstrumentIdeaExtensions"
                 classpathref = "javac2.classpath"/>
    </target>

    <!-- Modules -->

    <import file = "${basedir}/module_stockmanager.xml"/>

    <target name = "init" description = "Build initialization">
        <!-- Perform any build initialization in this target -->
    </target>

    <target name = "clean"
            depends = "clean.module.stockmanager, clean.artifact.stockmanager, clean.artifact.stockmanager1"
            description = "cleanup all"/>

    <target name = "build.modules" depends = "init, clean, compile.module.stockmanager"
            description = "build all modules"/>

    <target name = "init.artifacts">
        <property name = "artifacts.temp.dir" value = "${basedir}/__artifacts_temp"/>
        <property name = "artifact.output.stockmanager" value = "${basedir}/out/artifacts/StockManager"/>
        <property name = "artifact.output.stockmanager1" value = "${basedir}/out/artifacts/StockManager1"/>
        <mkdir dir = "${artifacts.temp.dir}"/>
        <property name = "artifact.temp.output.StockManager" value = "${artifacts.temp.dir}/StockManager.jar"/>
        <property name = "temp.jar.path.StockManager.jar" value = "${artifacts.temp.dir}/1/StockManager.jar"/>
        <mkdir dir = "${artifacts.temp.dir}/1"/>
        <taskdef resource = "com/sun/javafx/tools/ant/antlib.xml" uri = "javafx:com.sun.javafx.tools.ant"
                 classpath = "${jdk.home.9.0}/lib/ant-javafx.jar"/>
    </target>

    <target name = "clean.artifact.stockmanager" description = "clean StockManager artifact output">
        <delete dir = "${artifact.output.stockmanager}"/>
    </target>

    <target name = "clean.artifact.stockmanager1" description = "clean StockManager1 artifact output">
        <delete dir = "${artifact.output.stockmanager1}"/>
    </target>

    <target name = "artifact.stockmanager" depends = "init.artifacts, compile.module.stockmanager"
            description = "Build &#39;StockManager&#39; artifact" xmlns:fx = "javafx:com.sun.javafx.tools.ant">
        <mkdir dir = "${artifact.output.stockmanager}"/>
        <copy todir = "${artifact.temp.output.StockManager}">
            <fileset dir = "${stockmanager.output.dir}"/>
        </copy>
        <copy todir = "${artifact.temp.output.StockManager}">
            <fileset dir = "${basedir}/res"/>
        </copy>
        <fx:fileset id = "all_but_StockManager" dir = "${artifact.temp.output.StockManager}" includes = "**/*.jar">
            <exclude name = "StockManager.jar"/>
        </fx:fileset>
        <fx:fileset id = "all_StockManager" dir = "${artifact.temp.output.StockManager}" includes = "**/*.jar"/>
        <fx:application id = "StockManager_id" name = "StockManager" mainClass = "fahamu.Main" version = "1.02"/>
        <fx:csstobin outdir = "${artifact.temp.output.StockManager}">
            <fileset dir = "${artifact.temp.output.StockManager}" includes = "**/*.css"/>
        </fx:csstobin>
        <fx:jar destfile = "${artifact.temp.output.StockManager}/StockManager.jar">
            <fx:application refid = "StockManager_id"/>
            <fileset dir = "${artifact.temp.output.StockManager}" excludes = "**/*.jar"/>
            <fx:resources>
                <fx:fileset refid = "all_but_StockManager"/>
            </fx:resources>
            <manifest>
                <attribute name = "Implementation-Title" value = "Smart Stock Manager"/>
                <attribute name = "Implementation-Version" value = "1.02"/>
                <attribute name = "Implementation-Vendor" value = "FahamuTech Developers"/>
            </manifest>
        </fx:jar>
        <fx:deploy width = "1100" height = "650" updatemode = "background"
                   outdir = "${artifact.temp.output.StockManager}/deploy" outfile = "StockManager"
                   nativeBundles = "all">
            <fx:preferences menu="true" shortcut="true"/>
            <fx:application refid = "StockManager_id"/>
            <fx:info title = "Smart Stock Manager" vendor = "FahamuTech Developers"
                     description = "Application to manage the stock"/>
            <fx:resources>
                <fx:fileset refid = "all_StockManager"/>
            </fx:resources>
        </fx:deploy>
        <copy todir = "${artifact.output.stockmanager}">
            <fileset dir = "${artifact.temp.output.StockManager}/deploy"/>
        </copy>
        <delete includeemptydirs = "true">
            <fileset dir = "${artifact.temp.output.StockManager}"/>
        </delete>
    </target>

    <target name = "artifact.stockmanager1" depends = "init.artifacts, compile.module.stockmanager"
            description = "Build &#39;StockManager1&#39; artifact">
        <mkdir dir = "${artifact.output.stockmanager1}"/>
        <jar destfile = "${temp.jar.path.StockManager.jar}" duplicate = "preserve" filesetmanifest = "mergewithoutmain">
            <zipfileset dir = "${stockmanager.output.dir}"/>
        </jar>
        <copy file = "${temp.jar.path.StockManager.jar}" tofile = "${artifact.output.stockmanager1}/StockManager.jar"/>
        <copy todir = "${artifact.output.stockmanager1}">
            <fileset dir = "${basedir}/res"/>
        </copy>
        <copy file = "${basedir}/src/fahamu/libs/jfoenix-9.0.1.jar"
              tofile = "${artifact.output.stockmanager1}/jfoenix-9.0.1.jar"/>
        <copy file = "${basedir}/src/fahamu/libs/charm-glisten-4.4.1.jar"
              tofile = "${artifact.output.stockmanager1}/charm-glisten-4.4.1.jar"/>
        <copy file = "${basedir}/src/fahamu/libs/FileEncryption.jar"
              tofile = "${artifact.output.stockmanager1}/FileEncryption.jar"/>
        <copy file = "${path.variable.maven_repository}/mysql/mysql-connector-java/6.0.6/mysql-connector-java-6.0.6.jar"
              tofile = "${artifact.output.stockmanager1}/mysql-connector-java-6.0.6.jar"/>
        <copy file = "${path.variable.maven_repository}/org/xerial/sqlite-jdbc/3.20.1/sqlite-jdbc-3.20.1.jar"
              tofile = "${artifact.output.stockmanager1}/sqlite-jdbc-3.20.1.jar"/>
    </target>

    <target name = "build.all.artifacts" depends = "artifact.stockmanager, artifact.stockmanager1"
            description = "Build all artifacts">

        <!-- Delete temporary files -->
        <delete dir = "${artifacts.temp.dir}"/>
    </target>

    <target name = "all" depends = "build.modules, build.all.artifacts" description = "build all"/>
</project>